<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailNewsActivity">

    <ImageView
        android:id="@+id/news"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        android:contentDescription="@null"
        android:scaleType="matrix"
        android:padding="@dimen/image_view_padding"
        android:background="@drawable/no_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_marginTop="@dimen/view_margin"
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/image_view_padding"
        android:layout_marginEnd="@dimen/view_margin"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        tools:text="ADDRESS SECT1E News Bangalore"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/text_size"
        app:layout_constraintTop_toBottomOf="@+id/news"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="@dimen/image_view_padding"
        android:layout_marginRight="@dimen/view_margin"
        android:layout_gravity="start"
        tools:ignore="UnknownId" />

    <TextView
        android:textAlignment="textStart"
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/image_view_padding"
        android:layout_marginEnd="@dimen/view_margin"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        tools:text="Description..."
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size"
        app:layout_constraintTop_toBottomOf="@+id/title_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="start"
        android:layout_marginLeft="@dimen/image_view_padding"
        android:layout_marginRight="@dimen/view_margin" />


</androidx.constraintlayout.widget.ConstraintLayout>